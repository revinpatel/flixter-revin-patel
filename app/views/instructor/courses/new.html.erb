<br />
<div class="booyah-box col-10 offset-1">
  <h1>Create a New Course</h1>
  <br />
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cost %>
    <br />
    <%= f.submit "Create Course", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>
